{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "baseUrl": "./test",
        "rootDir": "./test",
        "paths": {
            "@wrappers": ["../src/wrappers"],
            "@utils": ["../src/utils"],
            "@utils/*": ["../src/utils/*"],
            "@api-types": ["../src/api-types"],
            "@api": ["../src/api"],
            "@api/*": ["../src/api/*"],
            "@config/*": ["../src/config/*"],
            "@errors": ["../src/errors"]
        }
    },
    "include": ["./test"]
}
