{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "baseUrl": "./src",
        "rootDir": "./src",
        "outDir": "./lib",
        "declarationDir": "./lib/types",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "paths": {
            "@wrappers": ["./wrappers"],
            "@utils": ["./utils"],
            "@utils/*": ["./utils/*"],
            "@api-types": ["./api-types"],
            "@api": ["./api"],
            "@api/*": ["./api/*"],
            "@config/*": ["./config/*"],
            "@errors": ["./errors"]
        },
        "plugins": [
            {
                "transform": "typescript-transform-paths"
            },
            {
                "transform": "typescript-transform-paths",
                "afterDeclarations": true
            }
        ]
    },
    "include": ["./src"]
}
